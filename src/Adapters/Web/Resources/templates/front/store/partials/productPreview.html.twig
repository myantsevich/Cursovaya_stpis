{%- spaceless -%}
    <div class="product-preview">
        <a class="product-preview__image" href="{{ productPath(product) }}">
            {%- if product.gallery.mainItem is not null -%}
                <img src="{{ product.gallery.mainItem.image.path | imagine_filter('product_square_thumb') }}" width="200" height="200">
            {%- endif -%}
        </a>
        <div class="product-preview__meta">
            <h3 class="product-preview__title">
                <a href="{{ productPath(product) }}">
                    {{- product.title.translate(app.request.locale) -}}
                </a>
            </h3>
            {{- include('front/store/partials/productPrice.html.twig', {price: product.price}) -}}
        </div>
    </div>
{%- endspaceless -%}